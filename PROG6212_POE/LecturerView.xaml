<Window x:Class="PROG6212_POE.LecturerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROG6212_POE"
        mc:Ignorable="d"
        Title="LecturerView" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFB9CEB6" Offset="0.091"/>
                    <GradientStop Color="#FF1F2F48" Offset="1"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <TextBlock Text="LECTURER VIEW" HorizontalAlignment="Center" FontSize="20" FontWeight="DemiBold"/>
            <!-- Button to View Claims -->
            <Button Grid.Row="0" Content="View Claims" Height="60" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center" Click="ViewClaims_Click" Margin="30"/>

            <!-- Button to Submit Claims -->
            <Button Grid.Row="1" Content="Submit Claims" Height="60" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center" Click="SubmitClaims_Click"/>
        </StackPanel>
    </Grid>
</Window>
