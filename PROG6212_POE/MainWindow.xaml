<Window x:Class="PROG6212_POE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROG6212_POE"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFB9CEB6" Offset="0.091"/>
                <GradientStop Color="#FF21CC1C" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <TextBlock Text="WELCOME TO THE CLAIM SUBMISSION SYSTEM" HorizontalAlignment="Center" FontSize="20" Margin="5"/>
        <StackPanel VerticalAlignment="Center">
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFB9CEB6" Offset="0.091"/>
                    <GradientStop Color="#FF21CC1C" Offset="1"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <Button Content="Create Account" Height="40" Click="CreateAccount_Click" Margin=" 15" Width="200"/>
            <Button Content="Lecturer Login" Height="40"  Click="Login_Click" Margin="15" Width="200"/>
            <Button Content="Coordinator Login" Height="40" Click="CoordinatorLogin_Click" Margin="15" Width="200"/>
            <Button Content="HR" Height="40" Click="HRView_Click" Margin="15" Width="200"/>
            <Button Content="EXIT" Height="40" Click="Exit_Click" Margin="15" Width="200"/>
        </StackPanel>
    </Grid>
</Window>
