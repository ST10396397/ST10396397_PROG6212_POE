<Window x:Class="PROG6212_POE.LecturerLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROG6212_POE"
        mc:Ignorable="d"
        Title="LecturerLogin" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFB9CEB6" Offset="0.091"/>
                    <GradientStop Color="#FF1F2F48" Offset="1"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <TextBlock Text="Lecturer Login Window" Margin="10" FontSize="20" HorizontalAlignment="Center"/>
            
            <!-- Email -->
            <TextBlock Text="Email:" VerticalAlignment="Center" Margin="10"/>
            <TextBox  Name="txtEmail" Width="200" HorizontalAlignment="Left"/>

            <!-- Password -->
            <TextBlock  Text="Password:" VerticalAlignment="Center" Margin="10"/>
            <PasswordBox  x:Name="txtPassword" Width="200" HorizontalAlignment="Left"/>

            <!-- Login Button -->
            <Button  Content="Login" Height="40" Click="Login_Click" Margin="20" Width="200"/>
        </StackPanel>
    </Grid>
</Window>
