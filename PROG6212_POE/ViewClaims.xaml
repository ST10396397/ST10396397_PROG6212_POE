<Window x:Class="PROG6212_POE.ViewClaims"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROG6212_POE"
        mc:Ignorable="d"
        Title="ViewClaims" Height="450" Width="800">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Name="ClaimsStackPanel" Margin="20">
                <!-- Header -->
                <TextBlock Text="Submitted Claims" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

                <!-- Claims will be dynamically added here -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
